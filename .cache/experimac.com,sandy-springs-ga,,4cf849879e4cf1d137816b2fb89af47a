		<script type="text/javascript">
jQuery(function(){

	jQuery('#gallery-nav').flexslider({
			animation: 'slide',
			controlNav: false,
			directionNav: true, 
			prevText: 'Previous', 
			nextText: 'Next',  
			animationLoop: false,
			slideshow: true,
			itemWidth: 174,
			itemMargin: 15,
			asNavFor: '#gallery-slides'
		});
		
	wistiaEmbed = document.getElementById( 'player_1' ).wistiaApi;
		
	jQuery('#gallery-slides')
	.fitVids()
	.flexslider({
			animation: 'slide',
			controlNav: true,
			animationLoop: true,
			slideshow: true,
			smoothHeight: true,
			start: function( slider ) {
				$('body').removeClass( 'loading' );
			},
			before: function ( slider ) {
				wistiaEmbed.pause();
			}
			
		});
		
		wistiaEmbed.bind( 'play', function() {
			jQuery('#gallery-slides').flexslider( 'pause' );
		});
		
		wistiaEmbed.bind( 'end', function() {
			jQuery('#gallery-slides').flexslider( 'play' );
		});
		
		
 });
</script> 

