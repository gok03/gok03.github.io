<script>
	$( document ).ready(function() {
		$.ajax({
			url: '/news/wp-json/wp/v2/posts',
			data: {
				filter: {
				'posts_per_page': 4,
				'tag': '000',
				'category_name': 'blog'
				}
			},
			dataType: 'json',
			type: 'GET',
			success: function(data) {
					if(!data.length) {
					   $('#tips-hacks').append('<p>Sorry, there are no recent News or Events.</p>');
					   return;
					}
					$.each(data, function(index, value) {
					$('#tips-hacks').append('<li class="post">' +
					'<h5><a href="/news/'+value.slug+'">'+value.title.rendered+'</a></h5>' +
					value.excerpt.rendered+'</li>');
				});
				$('.flexslider-fade').flexslider({
					animation: 'fade',
					controlNav: false,
					directionNav: false,
					randomize: true,
					smoothHeight: true
				});
			},
			error: function() {
				$('#tips-hacks').append('Sorry, there are no posts.');
			}
		});

		$.ajax({
			url: '/news/wp-json/wp/v2/posts',
			data: {
				filter: {
				'posts_per_page': 4,
				'tag': '1',
				'category_name': 'blog'
				}
			},
			dataType: 'json',
			type: 'GET',
			success: function(data) {
					if(!data.length) {
					   $('#corp_blog').show();		
					   $('#local_blog').hide();
					   return;
					}
					$('#corp_blog').hide();	
					$.each(data, function(index, value) {
					$('#tips-hacks-local').append('<li class="post">' +
					'<h5><a href="/news/'+value.slug+'">'+value.title.rendered+'</a></h5>' +
					value.excerpt.rendered+'</li>');
				});
				$('.flexslider-fade').flexslider({
					animation: 'fade',
					controlNav: false,
					directionNav: false,
					randomize: true,
					smoothHeight: true
				});
			},
			error: function() {
				$('#tips-hacks-local').append('Sorry, there are no posts.');
			}
		});
		
		$.ajax({
			url: '/news/wp-json/wp/v2/posts',
			data: {
				filter: {
				'posts_per_page': 2,
				'tag': '1,000',
				'category_name': 'blog'
				}
			},
			dataType: 'json',
			type: 'GET',
			success: function(data) {
					if(!data.length) {
					   $('.tips-hacks-store-footer').append('<p>Sorry, there are no recent News or Events.</p>');
					   return;
					}
					$.each(data, function(index, value) {
					$('.tips-hacks-store-footer').append('<div class="col-xs-12 col-sm-6 article">' +
					'<h5>'+value.title.rendered+'</h5>' +
					value.excerpt.rendered+'<p class="read-more"></p></div>');
				});
				
			},
			error: function() {
				$('.tips-hacks-store-footer').append('Sorry, there are no posts.');
			}
		});
		
		
		$.ajax({
			url: '/news/wp-json/wp/v2/posts',
			data: {
				filter: {
				'posts_per_page': 1,
				'tag': 1,
				'category_name': 'events'
				}
			},
			dataType: 'json',
			type: 'GET',
			success: function(data) {
				if(!data.length) {
					$('#local-events').hide();
				   return;
				}
				$.each(data, function(index, value) {
				  $('#local-events').append('<div class="post">' +
					'<h5><a href="/news/'+value.slug+'">'+value.title.rendered+'</a></h5>' +
					value.excerpt.rendered+'</div>');
				});
				
			},
			error: function() {
				$('#local-events').append('Sorry, there are no posts..');
			}
		});
		
	});
	
</script>


<script>
console.log($( window ).width());
if ($( window ).width() <= 768) {
	$('a.dropdown-toggle').addClass('disabled');
}
$(".caretholder").click(function() {
	console.log($(this).parent().siblings(".dropdown-menu"));
	var target=$(this).parent().siblings(".dropdown-menu");
	if(target.css("display")=="none"){
		target.css("display","block");
	}else{
		target.css("display","none");
	}
})
</script> 
		
