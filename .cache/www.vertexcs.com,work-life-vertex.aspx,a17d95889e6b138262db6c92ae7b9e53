        function linkClickFooter(sender) {
            var clickLink;
            if (sender.name == "aBLFirst")
                clickLink = "first";
            else if (sender.name == "aBLSecond")
                clickLink = "second";
            else if (sender.name == "aBLThird")
                clickLink = "third";

            InitializeRequest(clickLink);
        }

        function InitializeRequest(value) {
            PageMethods.set_path('/subblog.aspx');
            // call server side method
            PageMethods.SetFooterSession(value);
        }

        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) {
                $('.scroll-top').fadeIn('slow');
            } else {
                $('.scroll-top').fadeOut('slow');
            }

        });

        $('.scroll-top').click(function () {
            $('body,html').animate({
                scrollTop: 0
            }, 800);
            return false;
        });

