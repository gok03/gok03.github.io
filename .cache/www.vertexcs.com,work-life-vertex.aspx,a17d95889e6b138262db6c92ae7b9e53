        /*contactus form*/

        $(document).ready(function () {
            var _scroll = true, _timer = false, _floatbox = $("#contact_form"), _floatbox_opener = $(".contact-opener");
            _floatbox.css("right", "-362px"); //initial contact form position

            _floatbox.css("top", "62px");

            //Contact form Opener button
            _floatbox_opener.click(function () {
                if (_floatbox.hasClass('visiable')) {
                    _floatbox.delay(750).animate({ "right": "-362px" }, { duration: 300 }).removeClass('visiable');
                } else {
                    _floatbox.animate({ "right": "0px" }, { duration: 300 }).addClass('visiable');
                    $("#h4EmailResult").hide();
                }
            });

            //Effect on Scroll
            $(window).scroll(function () {
                if (_scroll) {
                    _floatbox.animate({ "top": "30px" }, { duration: 300 });
                    _scroll = false;
                }
                if (_timer !== false) { clearTimeout(_timer); }
                _timer = setTimeout(function () {
                    _scroll = true;
                    _floatbox.animate({ "top": "10px" }, { easing: "linear" }, { duration: 500 });
                }, 400);
            });

        });
					
    </script>
