	<script type="text/javascript">
		var scrollPos;
		var flexOn = false;
		var roleContent = null;
		
		function gotoSlide(num){
			var slider = $('#home-solutions-content .holder').data('flexslider');
			
			$('#home-solutions').find('.active').removeClass('active');
			$('#home-solutions').find('li:nth-child('+(num+1)+')').addClass('active');
			
			slider.flexAnimate(num, true, true)	
		}

		function openCard(id) {
		    var card = $("#" + id);

		    if ($(window).width() <= 715) {
		        card.css('display', '');
		        $.magnificPopup.open({
		            items: {
		                src: "#" + id, // can be a HTML string, jQuery object, or CSS selector
		                type: 'inline'
		            }
		        });
		    }
		    else {
		        card.fadeIn()
		    }
		}
	  
	  $(document).ready(function() {
		  
		  roleContent = $('#home-solutions-content .holder').html();
	
		 /* if($(window).width() > 715){
			  
			  $('#home-feature .button, #home-feature .button-outline').click(function(){
				  $('body, html').animate({
					 scrollTop: 1600
				  }, 750, 'easeOutExpo');
			  });

		  }*/

		  $('.video-link').magnificPopup({
		      disableOn: 700,
		      type: 'iframe',
		      mainClass: 'mfp-fade',
		      removalDelay: 160,
		      preloader: false,
		      fixedContentPos: true
		  });



		  $(".grid-detail .fa-times").click(function () {
		      $(".grid-detail-wrapper").fadeOut();
		  });
		  
		  $(window).resize();
		  
		  
	
	  });
	
	  $(window).resize(function() {
		   //
		   if($(window).width() > 715){
			  
			 /* $('#home-feature .button, #home-feature .button-outline').click(function(){
				  $('body, html').animate({
					 scrollTop: 1600
				  }, 750, 'easeOutExpo');
			  });*/
			  
			  // attaches flexslider for desktop ONLY
				  if(!flexOn){
					$('#home-solutions-content .holder').remove();
					$('#home-solutions-content').append('<div class="holder"></div>');
			   	  	$('#home-solutions-content .holder').html(roleContent)
						
					$('#home-solutions-content .holder').flexslider({
							animation: 'slide',
							animationLoop: false,
							slideshow: false,
							keyboard: false,
							directionNav: false,
							touch: true,
							after: function(slider){
								gotoSlide(slider.currentSlide)
							}
					});
				  

				
					$('#home-solutions li').each(function(){
						$(this).click(function(){
							gotoSlide($(this).index());
						
						})
					});
			  
			  		// sets first item
					$('#home-solutions').find('.active').removeClass('active');
		 	  		$('#home-solutions').find('li:nth-child(1)').addClass('active');
					  
					// sets boolean
					flexOn = true;
				  }
			   
		   } else {
			   if(flexOn){
			   	  $('#home-solutions-content .holder').remove();
				  $('#home-solutions-content').append('<div class="holder"></div>');
			   	  $('#home-solutions-content .holder').html(roleContent)
				  flexOn = false;
			   }
		   }

		   $("#home-grid li").height($("#home-grid li").width());
		  
	
	  });  
	  
	  $(window).load(function() {
		  $(window).scroll(); 
	  })
	  
	  $(window).scroll(function() {
		  
		  scrollPos = $(window).scrollTop();
			  
			// animation
			if(scrollPos > 1300){
				$('.feature-list li').each(function(index){
					var clip = $(this);
					clip.addClass('active');
					  
				});
			}

	  })
	  
	</script>

