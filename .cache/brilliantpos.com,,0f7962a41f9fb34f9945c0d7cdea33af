        <script>
            //background slider
            jQuery(document).ready(function($) {
                //.site-header-grad
                var images = new Array(
                        //'http://brilliantpos.com/wp-content/themes/smasher_child/img/slide2-bg.png',
                        'http://brilliantpos.com/wp-content/themes/smasher_child/img/slide3-bg.png',
                        'http://brilliantpos.com/wp-content/themes/smasher_child/img/banner-bg.png'
                        );

                //preloading images
                var preload_images = new Array();
                var i;

                /* preload images */
                for (i = 0; i < images.length; i++) {
                    preload_images[i] = new Image();
                    preload_images[i].src = images[i];
                }
                //set initial background
                $('.site-header-grad').css('background', 'url(' + preload_images[1].src + ') top center no-repeat');
                $('.site-header-grad').css('background-size', '100% 100%');
                var counter = 1;
                slideImage();//make the first call
                var interval = setInterval(slideImage, 12300);

                function slideImage() {
                    $('.site-header-grad').animate({width: '100%'}, 1000, function() {
                        $(this).css('background', 'url(' + preload_images[counter++ % preload_images.length].src + ') top center no-repeat');
                        $(this).css('background-size', '100% 100%');
                    }).animate({width: '100%'}, 1000);
                }
            });
        </script>
