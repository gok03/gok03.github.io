<script type="text/javascript">

    $(document).ready(function () {
        Cancel();
       $(document).on("click",$(".close-chat"),function () {
            Cancel();
        });
    });

    function Cancel() {

        var Name = document.getElementById("Qfullname");
        var Email = document.getElementById("QEmail");
        var Organistaion = document.getElementById("QOrganization");
        var Phone = document.getElementById("QPhone");
        var City = document.getElementById("QCity");
        var Message = document.getElementById("QMessage");
        var CapCodeText = document.getElementById("CapCodeText");

        Name.value = "";
        Email.value = "";
        Organistaion.value = "";
        Phone.value = "";
        City.value = "";
        $("#QMessage").val('');
        $("#QcCountryCode").val("");
        CapCodeText.value = "";
    }

    function isNumber(evt) {
        evt = (evt) ? evt : window.event;
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
    function getCaptchImage() {
        $.ajax({
            url: "/mvc/PageElements/GetContactCaptchImage",
            data: { captchaType: "1" },
            cache: false,
            success: function (data) {
                $("#captch-image-quick-contact").attr("src", data.ImageData);
                $("#CapImageText").val(data.ActualNumber);
            }
        });
    }
</script>


