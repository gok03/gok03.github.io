    $(document).ready(function () {
        $("#QuickContactErrorDiv").hide();
    });
    $("#QCCountry").change(function () {
        var option = $('option:selected', this).attr('country-code');
        if (option > 0) {
            $("#QcCountryCode").removeAttr("readonly");
            $("#QcCountryCode").val("+" + option);
        }
        else {
            $("#QcCountryCode").val("");
        }
        $("#QcCountryCode").attr("readonly", true);
    });
</script>


