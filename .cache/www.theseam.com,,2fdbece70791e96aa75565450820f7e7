    <script type="text/javascript">
        var $ = jQuery.noConflict();

        function DisplayRecentNewsFooter() {
            var data = '{"category":' + 0 + ', "feedType":' + 0 + ', "lastRow":' + 0 + ', "chunkSize":' + 3 + '}';

            $.ajax({
                type: "POST"
                , url: "/news/industry-news/default.aspx/GetFeedPosts"
                , data: data
                , contentType: "application/json; charset=utf-8"
                , dataType: "json"
                , success: function (result) {
                    var text = [];
                    var j = 0;

                    var posts = eval("(" + result.d + ")");
                    if (posts.Table.length > 0) {

                        $.each(posts.Table, function () {
                            var d = new Date(this.PostDate);
                            var postDate = (d.getMonth() + 1) + '/' + d.getDate() + '/' + d.getFullYear();

                            text[j++] = '<li><a href="/news/industry-news/post/' + this.ID + '/">' + this.Title + '</a><span class="post-date">' + postDate + '</span><li>';
                        });

                        $('.widget_recent_entries').not('.posts_recent').find('ul').empty().append(text.join(''));
                    }
                }
                , error: function (xhr, textStatus, errorThrown) { }
            });
        }

        $(document).ready(function ()
        {
            DisplayRecentNewsFooter();
        });
    </script>

