<script type="text/javascript">
function resizeResumatorIframe(pixelHeight,noJump)
{
	$("#resumator-job-frame").attr("height",pixelHeight).attr("scrolling","no");
	if(typeof resizeResumatorIframe.executed === "undefined"){ resizeResumatorIframe.executed = 1;}
	else{$(window).scrollTo($("#resumator-job-frame").offset().top-$('#mainnav').height());}
};
